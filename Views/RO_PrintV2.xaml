<Window x:Class="WpfApp5.Views.RO_PrintV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="RO_PrintV2" Height="200" Width="300">
    
    <StackPanel Margin="20">
        <TextBlock Text="Group by:"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
        <ComboBox ItemsSource="{Binding GroupingOptions}"
                  DisplayMemberPath="DisplayText"
                  Height="25"
                  SelectedItem="{Binding SelectedOption}" />

        <Button Content="{Binding ButtonCaption}"
                Command="{Binding PrintCommand}"
                Height="30"
                Margin="0,30,0,0"/>
    </StackPanel>
</Window>
